<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>
				%red(%file) l=%line %d{HH:mm:ss} [%t] %-5level %logger{36} %msg%n
			</Pattern>
		</encoder>
	</appender>

	<logger name="e" level="debug" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>

	<root level="debug">
		<appender-ref ref="STDOUT"/>
	</root>
</configuration>